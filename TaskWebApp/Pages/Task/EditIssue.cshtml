@page
@using TaskWebApp.Models;
@model TaskWebApp.Pages.Task.EditIssueModel
@{
}
<div class="m-2">

    <form method="post">
        <div class="modal-header">
            <h5 class="modal-title" id="issueModalLabel">Edit Task</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

        </div>
        <div class="modal-body">
            <div class="form-group">
                <label class="form-label" asp-for="Issue.Title">Title</label>
                <input class="form-control" asp-for="Issue.Title" />
                <span asp-validation-for="Issue.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Issue.Description">Description</label>
                <input class="form-control" asp-for="Issue.Description" />
                <span asp-validation-for="Issue.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Issue.IssueType">Type</label>
                <select class="form-select" asp-for="Issue.IssueType" asp-items="Html.GetEnumSelectList<IssueType>()"></select>
            </div>           
             <div class="form-group">
                <label class="form-label" asp-for="Issue.IssueStatus">Status</label>
                <select class="form-select" asp-for="Issue.IssueStatus" asp-items="Html.GetEnumSelectList<IssueStatus>()"></select>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Issue.Assign">Assign</label>
                <select class="form-select" asp-for="Issue.Assign" asp-items="Model.UserSL"></select>
            </div>
        </div>
        <div class="modal-footer">
            <input asp-for="Issue.Id" type="hidden">
            <input asp-for="Issue.Assign" type="hidden">
            <button type="submit" class="btn btn-primary mt-3">Submit</button>
        </div>
    </form>
</div>

