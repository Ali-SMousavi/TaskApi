@page
@model TaskWebApp.Pages.Account.EditUserModel
@{
}
@if (Request.Query["status"] == "NotUpdated")
{
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>The User not updated.</strong> Please try again.
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
}
<div class="m-2">
    <form method="post">
        <div class="form-group">
            <label class="form-label" asp-for="User.FirstName">First name</label>
            <input class="form-control" asp-for="User.FirstName" type="text">
            <span asp-validation-for="User.FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="form-label" asp-for="User.Surname">Surname</label>
            <input class="form-control" asp-for="User.Surname" type="text">
            <span asp-validation-for="User.Surname" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="form-label" asp-for="User.Email">Email</label>
            <input class="form-control" asp-for="User.Email" type="text">
            <span asp-validation-for="User.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="form-label" asp-for="User.Address">Address</label>
            <input class="form-control" asp-for="User.Address" type="text">
            <span asp-validation-for="User.Address" class="text-danger"></span>
        </div>
        <input asp-for="User.Id" type="hidden">
        <button type="submit" class="btn btn-primary mt-2">Save</button>
    </form>
</div>
